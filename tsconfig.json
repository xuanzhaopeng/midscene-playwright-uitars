{
	"compilerOptions": {
		"target": "es2021",
		"module": "commonjs",
		"jsx": "react-jsx",
		"strict": true,
		"allowJs": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"outDir": "target/",
		"types": ["node"],
		"resolveJsonModule": true
	},
	"include": ["./e2e"],
	"exclude": ["./hf-deployment-validation"]
}